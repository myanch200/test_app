<%= form_with model: [@project, @list] do |f| %>
  <div class="w-full mb-3 field lg:w-1/3">
    <%= f.label :name, class: 'block text-md font-medium text-gray-700' %>
    <%= f.text_field :name, class: 'mt-1 w-full rounded-md border-gray-200 shadow-sm sm:text-sm' %>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "inline-block shrink-0 rounded-md border border-blue-600 bg-blue-600 px-6 py-3 text-sm font-medium text-white transition hover:bg-transparent hover:text-blue-600 focus:outline-none focus:ring active:text-blue-500 cursor-pointer"%>
  </div>
<% end %>